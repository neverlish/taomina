<div class="container">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
    <div class="col-md-10 col-md-offset-1" style="padding: 221px 0;">
      <h2 class="text-center login-title">Signin</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div style="padding-bottom: 15px;">
            <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email'%>
          </div>
          <%= f.input :password, required: false, label: false, placeholder: 'Password' %>
          <%= f.input :remember_me, label: 'Keep me signed in', as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "LOG IN", class: "login-red" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
