<div class="container">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
    <div class="col-md-10 col-md-offset-1" style="padding: 50px 0;">
      <h2 class="text-center login-title">Signup</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div style="padding-bottom: 10px;">
            <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email'%>
          </div>
          <!-- <%= f.input :password, required: true, label: false, placeholder: 'Password', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %> -->
          <div style="padding-bottom: 10px;">
            <%= f.input :password, required: true, label: false, placeholder: 'Password' %>
          </div>
          <div style="padding-bottom: 10px;">
            <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Password Confirmation' %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'login-red' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
