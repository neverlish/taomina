<div>
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="5000">

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox" style="max-height: 100vh;">
      <div class="item active">
        <img src="http://www.taomina.com/wp-content/uploads/2015/09/Sven-Schelwach_between-traditions.jpg" alt="...">
        <div class="carousel-caption">
          ...
        </div>
      </div>
      <div class="item">
        <img src="http://www.taomina.com/wp-content/uploads/2015/09/fullsize_distr.jpg" alt="...">
        <div class="carousel-caption">
          ...
        </div>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


<div class="container-fluid" style="padding: 0;">
	<div class="row" style="margin: 70px 0;">
    <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12" style="padding: 0;">
  		<% @projects.each_with_index do |project, index| %>
        <%= link_to project_path(project) do %>
          <div class="project-box col-md-4 col-sm-6 col-xs-12">
            <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12" style="height: 100%; padding: 0;">
              <div class="project-box-image" style="background-image: url('<%= project.imageurls[0] %>');">
              </div>
              <div class="project-box-title">
                <%= project.name %>
              </div>
              <div class="project-box-price text-center">
                $<%= project.price %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row text-center">
    <% if user_signed_in? %>
      <%= link_to 'New project', new_project_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
<div class="row">
  <% if @post %>
    <%= raw @post.text %>
    <hr>
    <% if @post.user == current_user %>
      <div class="text-center">
        <%= link_to 'Edit', edit_post_path(@post) , class: 'btn btn-default'%>
      </div>
    <% end %>
  <% end %>

</div>
