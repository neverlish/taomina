<div style="background-color: blue; height: 300px; margin-bottom: 70px; margin-top: -50px; color: white; font-size: 60px; padding: 100px 0 0 40px;">CART</div>
<h1 class="text-center">Your cart</h1>
<hr>
<div class="container">
	
	<% if @cart.nil? %>
		<p>Your cart is currently empty</p>
	<% else %>
		
		<% total = 0 %>
		<ul>
		<% @cart.each do |each| %>
			<div style="border: 1px solid #ebebeb; height: 350px; width: 100%; margin-bottom: 30px;">
				<%= link_to each.project.name, project_path(each.project.id) %>
				<hr>
				<div class="project-box-image" style="background-image: url('<%= each.project.imageurls[0] %>'); height: 100px; width: 100px; border: 1px solid #ebebeb;"></div>
				<div class="row" style="padding: 20px;">
					<div class="col-md-4 text-center" style="margin:0; padding-right: 0;">
						
						<div style="background-color: #ebebeb; width: 100%">판매가</div>
						<p><%= number_to_currency(each.project.price, unit: '$') %></p>
					</div>
					<div class="col-md-4 text-center" style="margin:0; padding: 0;">
						<div style="background-color: #ebebeb;">수량</div>
						<%= each.quantity %>
					</div>
					<div class="col-md-4 text-center" style="margin:0; padding-left: 0;">
						<div style="background-color: #ebebeb; width: 100%">배송비</div>
						FREE
					</div>
				</div>
				<hr>
				소계
				$<%= each.quantity * each.project.price %>
				<% total += each.quantity * each.project.price %>
			</div>
		<% end %>
		<div class="text-right"> 
			<%= link_to 'Empty your cart', cart_clear_path %>
		</div>

		<div style="background-color: #ebebeb; height: 200px; width: 100%">
		
		Shipping charge
		free
		TOTAL
			<p><b><%= number_to_currency(total, unit: '$') %></b></p>
		
	<% end %>
	</ul>
</div>