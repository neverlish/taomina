<h1>Your cart</h1>
<% if @cart.nil? %>
	<p>Your cart is currently empty</p>
<% else %>
	<%= link_to 'Empty your cart', cart_clear_path %>
	<% total = 0 %>
	<ul>
	<% @cart.each do |each| %>
		<li>
			<%= link_to each.project.name, project_path(each.project.id) %>
			<p><%= number_to_currency(each.project.price, unit: '$') %></p>
			<p>Quantity: <%= each.quantity %></p>
		</li>
		<% total += each.quantity * each.project.price %>

	<% end %>
	
	<p><b><%= number_to_currency(total, unit: '$') %></b></p>
	
<% end %>
</ul>
