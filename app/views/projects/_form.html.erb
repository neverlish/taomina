<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <!-- #f.input :category, label: false, collection: Project.categories.keys -->
    <%= f.input :name, label: false, placeholder: "Project name" %>
    <%= f.input :price, as: :integer, label: false, placeholder: "Price(optional)" %>
    <%= f.input :text, label: false, as: :summernote %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Back', root_path, class: 'btn btn-default' %>
  </div>
<% end %>