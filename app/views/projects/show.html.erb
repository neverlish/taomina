<div class="project-detail">
	<h2 class="text-center">
	  <%= @project.name %>
	</h2>
  <%= raw @project.text %>


	<hr>
	<%= link_to project_path(@project.next[0].id) do %>
		<div class="text-center" style="height: 240px; background-color: rgba(0,0,0,0.6); background-image: url('<%= @project.next[0].imageurls[0] %>');">
			<div class="project-next-title"><%= @project.next[0].name %></div>
			<div class="project-next-text">Next Project</div>
			<%= image_tag "nextpage" %>
			</div>
	<% end %>
	<div class="text-right">
		<% if @project.user == current_user %>
			<%= link_to 'Edit', edit_project_path(@project) , class: 'btn btn-default'%>
			<%= link_to 'Delete', project_path(@project), method: :delete, class: 'btn btn-default' %>
		<% end %>
		<%= link_to 'Back', root_path, class: 'btn btn-default' %><% if @project.next != [] %>
		<% end %>
	</div>
</div>
